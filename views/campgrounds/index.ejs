<% include ../partials/header %> 

<div class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome to YelpCamp</h1>
      <p class="lead">Credit to Ian Zhao</p>
      <hr class="my-4">
      <h5>View my hand-picked campgrounds from all over the word</h5>
      <a id="add-newCampground" class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campgrounds</a>
    </div>
    <hr>
    <div class="row text-center"> 
        <div class="col-lg-12">
            <h3>Our Most Popular Sites</h3>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>                        
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %> 